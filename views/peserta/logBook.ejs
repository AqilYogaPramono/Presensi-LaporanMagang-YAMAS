<script>
$(function() {
// Data dari server
let currentData = {};

// Fungsi debug untuk console
function debugLog(message, data = null) {
    console.log('[DEBUG] ' + message, data || '');
}

// Parsing data dari tabel dengan debug
function parseDataFromTable() {
    const tableRow = $('#dataTableBody tr').first();
    debugLog('Parsing table data...');
    debugLog('Found table rows:', $('#dataTableBody tr').length);
    
    if (tableRow.length) {
        const laporanButton = tableRow.find('[data-laporan="true"]');
        const sudahLaporan = laporanButton.length > 0;
        
        currentData = {
            id: tableRow.data('id') || null,
            nama: tableRow.find('td:first').text().trim(),
            sudahMasuk: tableRow.find('[data-waktu-masuk="true"]').length > 0,
            sudahKeluar: tableRow.find('[data-waktu-keluar="true"]').length > 0,
            sudahLaporan: sudahLaporan
        };
        
        debugLog('Parsed current data:', currentData);
    } else {
        currentData = {
            sudahMasuk: false,
            sudahKeluar: false,
            sudahLaporan: false
        };
        debugLog('No data found, using defaults:', currentData);
    }
}

// Update waktu saat ini
function updateCurrentTime() {
    const now = new Date();
    const timeString = now.toLocaleString('id-ID', {
        weekday: 'long',
        year: 'numeric',
        month: 'long',
        day: 'numeric',
        hour: '2-digit',
        minute: '2-digit',
        second: '2-digit'
    });
    $('#currentTime').text(timeString);
}

// Get current day info
function getCurrentDayInfo() {
    const now = new Date();
    const dayOfWeek = now.getDay(); 
    const currentHour = now.getHours();
    
    return {
        dayOfWeek: dayOfWeek,
        currentHour: currentHour,
        isWeekday: dayOfWeek >= 1 && dayOfWeek <= 5, 
        isSaturday: dayOfWeek === 6,
        isSunday: dayOfWeek === 0
    };
}

function isTimeAllowedForAction(action) {
    const dayInfo = getCurrentDayInfo();
    const { dayOfWeek, currentHour, isWeekday, isSaturday, isSunday } = dayInfo;

    // Minggu libur total
    if (isSunday) {
        return false;
    }

    switch (action) {
        case 'masuk':
            return (isWeekday || isSaturday) && currentHour >= 9 && currentHour < 10;
            
        case 'keluar':
            if (isWeekday) {
                // Senin-Jumat: 16:00-17:00
                return currentHour >= 16 && currentHour < 17;
            } else if (isSaturday) {
                // Sabtu: 13:00-14:00
                return currentHour >= 13 && currentHour < 14;
            }
            return false;
            
        case 'laporan':
            if (isWeekday) {
                return currentHour >= 16 && currentHour < 24;
            } else if (isSaturday) {
                return currentHour >= 14 && currentHour < 24;
            }
            return false;
            
        default:
            return false;
    }
}

function updateScheduleInfo() {
    const dayInfo = getCurrentDayInfo();
    const { isWeekday, isSaturday, isSunday } = dayInfo;

    if (isSunday) {
        $('#holidayNotice').show();
        $('#actionButtons').hide();
        return;
    }

    $('#holidayNotice').hide();
    $('#actionButtons').show();

    if (isWeekday) {
        $('#timeInfoKeluar').html('<i class="mdi mdi-clock-outline"></i> Jam 16:00 - 17:00');
        $('#dayStatusKeluar').text('(Senin - Jumat)');
        $('#timeInfoLaporan').html('<i class="mdi mdi-clock-outline"></i> Jam 16:00 - 23:59');
        $('#dayStatusLaporan').text('(Senin - Jumat)');
        $('#uploadTimeText').text('Laporan hanya dapat diupload antara jam 16:00 - 23:59');
    } else if (isSaturday) {
        $('#timeInfoKeluar').html('<i class="mdi mdi-clock-outline"></i> Jam 13:00 - 14:00');
        $('#dayStatusKeluar').text('(Sabtu)');
        $('#timeInfoLaporan').html('<i class="mdi mdi-clock-outline"></i> Jam 14:00 - 23:59');
        $('#dayStatusLaporan').text('(Sabtu)');
        $('#uploadTimeText').text('Laporan hanya dapat diupload antara jam 14:00 - 23:59');
    }

    // Info masuk sama untuk weekday dan sabtu
    $('#timeInfoMasuk').html('<i class="mdi mdi-clock-outline"></i> Jam 09:00 - 10:00');
    $('#dayStatusMasuk').text(isWeekday ? '(Senin - Jumat)' : '(Sabtu)');
}

// Update status tombol berdasarkan waktu dan data
function updateButtonStatus() {
    const dayInfo = getCurrentDayInfo();
    
    debugLog('Updating button status with currentData:', currentData);
    
    // Jika hari Minggu, nonaktifkan semua tombol
    if (dayInfo.isSunday) {
        return;
    }

    const btnPresensiMasuk = $('#btnPresensiMasuk');
    const btnPresensiKeluar = $('#btnPresensiKeluar');
    const btnUploadLaporan = $('#btnUploadLaporan');

    // Presensi Masuk: 09:00 - 10:00 (Senin-Sabtu)
    if (currentData.sudahMasuk) {
        btnPresensiMasuk.prop('disabled', true)
            .removeClass('btn-success').addClass('btn-secondary')
            .html('<i class="mdi mdi-check mr-2"></i>Sudah Presensi');
    } else if (!isTimeAllowedForAction('masuk')) {
        btnPresensiMasuk.prop('disabled', true)
            .removeClass('btn-success').addClass('btn-secondary')
            .html('<i class="mdi mdi-clock-alert mr-2"></i>Waktu Habis');
    } else {
        btnPresensiMasuk.prop('disabled', false)
            .removeClass('btn-secondary').addClass('btn-success')
            .html('<i class="mdi mdi-login mr-2"></i>Presensi Masuk');
    }

    // Presensi Keluar
    if (currentData.sudahKeluar) {
        btnPresensiKeluar.prop('disabled', true)
            .removeClass('btn-warning').addClass('btn-secondary')
            .html('<i class="mdi mdi-check mr-2"></i>Sudah Keluar');
    } else if (!currentData.sudahMasuk) {
        btnPresensiKeluar.prop('disabled', true)
            .removeClass('btn-warning').addClass('btn-secondary')
            .html('<i class="mdi mdi-alert mr-2"></i>Masuk Dulu');
    } else if (!isTimeAllowedForAction('keluar')) {
        btnPresensiKeluar.prop('disabled', true)
            .removeClass('btn-warning').addClass('btn-secondary')
            .html('<i class="mdi mdi-clock-alert mr-2"></i>Waktu Habis');
    } else {
        btnPresensiKeluar.prop('disabled', false)
            .removeClass('btn-secondary').addClass('btn-warning')
            .html('<i class="mdi mdi-logout mr-2"></i>Presensi Keluar');
    }

    // Upload Laporan - INI YANG DIPERBAIKI
    debugLog('Checking upload button - sudahLaporan:', currentData.sudahLaporan);
    debugLog('Time allowed for laporan:', isTimeAllowedForAction('laporan'));
    
    if (!isTimeAllowedForAction('laporan')) {
        btnUploadLaporan.prop('disabled', true)
            .removeClass('btn-info').addClass('btn-secondary')
            .html('<i class="mdi mdi-clock-alert mr-2"></i>Waktu Habis');
        debugLog('Upload button disabled - time not allowed');
    } else {
        btnUploadLaporan.prop('disabled', false)
            .removeClass('btn-secondary').addClass('btn-info');
        
        if (currentData.sudahLaporan) {
            btnUploadLaporan.html('<i class="mdi mdi-pencil mr-2"></i>Edit Laporan');
            debugLog('Upload button set to EDIT mode');
        } else {
            btnUploadLaporan.html('<i class="mdi mdi-upload mr-2"></i>Upload Laporan');
            debugLog('Upload button set to UPLOAD mode');
        }
    }
}

// Setup modal upload/edit laporan
function setupUploadModal() {
    const formLaporan = $('#formLaporan');
    const modalTitle = $('#modalTitle');
    const uploadTitle = $('#uploadTitle');
    const submitText = $('#submitText');
    const submitBtn = $('#submitBtn');
    const editWarning = $('#editWarning');
    const laporanFile = $('#laporanFile');

    debugLog('Setting up upload modal - sudahLaporan:', currentData.sudahLaporan);

    if (currentData.sudahLaporan) {
        // Mode Edit
        formLaporan.attr('action', '/peserta/laporan-harian-update');
        modalTitle.html('<i class="mdi mdi-pencil mr-2"></i>Edit Laporan Harian');
        uploadTitle.text('Pilih File PDF Laporan Baru');
        submitText.text('Update');
        submitBtn.html('<i class="mdi mdi-pencil mr-2"></i>Update');
        editWarning.show();
        debugLog('Modal set to EDIT mode');
    } else {
        // Mode Upload
        formLaporan.attr('action', '/peserta/laporan-harian-upload');
        modalTitle.html('<i class="mdi mdi-upload mr-2"></i>Upload Laporan Harian');
        uploadTitle.text('Pilih File PDF Laporan');
        submitText.text('Upload');
        submitBtn.html('<i class="mdi mdi-upload mr-2"></i>Upload');
        editWarning.hide();
        debugLog('Modal set to UPLOAD mode');
    }

    // Reset file input
    laporanFile.val('');
}

// Event handler untuk button upload laporan
$('#btnUploadLaporan').on('click', function() {
    debugLog('Upload button clicked');
    setupUploadModal();
});

// Fungsi untuk refresh data setelah upload
function refreshDataAfterUpload() {
    debugLog('Refreshing data after upload...');
    
    // Delay sebentar untuk memastikan DOM sudah ter-update
    setTimeout(function() {
        parseDataFromTable();
        updateButtonStatus();
    }, 100);
}

// Check URL params untuk mendeteksi redirect setelah upload
function checkUploadSuccess() {
    const urlParams = new URLSearchParams(window.location.search);
    if (urlParams.has('upload_success') || urlParams.has('update_success')) {
        debugLog('Upload success detected, refreshing data...');
        refreshDataAfterUpload();
        
        // Bersihkan URL params
        const cleanUrl = window.location.pathname;
        window.history.replaceState({}, document.title, cleanUrl);
    }
}

// Observer untuk mendeteksi perubahan DOM pada tabel
function observeTableChanges() {
    const targetNode = document.getElementById('dataTableBody');
    if (!targetNode) return;
    
    const config = { childList: true, subtree: true, attributes: true };
    
    const callback = function(mutationsList, observer) {
        for (let mutation of mutationsList) {
            if (mutation.type === 'childList' || mutation.type === 'attributes') {
                debugLog('Table DOM changed, re-parsing data...');
                parseDataFromTable();
                updateButtonStatus();
                break;
            }
        }
    };
    
    const observer = new MutationObserver(callback);
    observer.observe(targetNode, config);
    debugLog('Table observer started');
}

