                        <% } else { %>
                        <span class="text-muted" data-laporan="false">Belum upload</span>
                        <% } %>
                        </div>
                    </td>
                    </tr>
                <% }); %>
                <% } else { %>
                <tr>
                    <td colspan="4" class="text-center text-muted">Tidak ada data hari ini</td>
                </tr>
                <% } %>
            </tbody>
            </table>
